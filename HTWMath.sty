%Wende Eingaben an:
\ProcessOptions\relax


%Packages:
\RequirePackage{fp}

\RequirePackage{xifthen}

%====================================================%
%	Operatoren:                                      %
%====================================================%

%Modulus:
\newcommand{\FPmod}[2]{clip(#1 - trunc(#1 / #2:0) * #2)}
\newcommand{\FPinc}[1]{\FPeval{#1}{clip(#1 + 1)}}
\newcommand{\FPdec}[1]{\FPeval{#1}{clip(#1 - 1)}}

%====================================================%
%	Komparatoren:                                    %
%====================================================%

\newtest{\isBigger}[2]{\cnttest{#1}>{#2}}
\newtest{\isSmaller}[2]{\cnttest{#1}<{#2}}

\newtest{\isZero}[1]{\cnttest{#1}={0}}
\newtest{\isOne}[1]{\cnttest{#1}={1}}
\newtest{\isNegative}[1]{\cnttest{#1}<{0}}
\newtest{\isPositive}[1]{\cnttest{#1}>{0}}

\newtest{\isInRange}[3]{\cnttest{#1}>{#2} \AND \cnttest{#1}<{#3}}